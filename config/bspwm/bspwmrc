#!/bin/zsh

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Environment
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
export bliss=#8a2be2
# export blissful=#7209b7
# export blood=#AF0000

echo "Xcursor.theme: phinger-cursors \n |
      Xcursor.size: 36"                 | xrdb

envsubst < $XDG_DATA_HOME/themes/Graphite-Dark-Alt/gtk-3.0/gtk.css.temp  |
	 > $XDG_DATA_HOME/themes/Graphite-Dark-Alt/gtk-3.0/gtk.css
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Startup
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
xsetroot -cursor_name left_ptr &
restore_fehbg &
pgrep -x picom > /dev/null || picom &
pgrep -x sxhkd > /dev/null && killall sxhkd ; sxhkd &
if [[ "$1" = 0  ]] && [[ $(hostnamectl --static) -eq 'envy' ]]; then
    auto_rotate.sh &
    libinput-gestures-setup start &
fi
launch_polybar &

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Monitor
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
bspc monitor $(xrandr | awk '/ connected/{print $1}') -d 1 2 3 4 5 firefox 7

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Desktops
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
bspc desktop firefox -l monocle

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Gaps & Borders
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
bspc config window_gap            6
bspc config border_width          4
# bspc config top_padding         -4 
# bspc config right_padding       -4
# bspc config left_padding        -4
# bspc config bottom_padding       35
# bspc config top_monocle_padding       -6
# bspc config right_monocle_padding     -6
# bspc config left_monocle_padding      -6
# bspc config bottom_monocle_padding       35

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Colors
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
bspc config active_border_color    "#000000"
bspc config normal_border_color    "#000000"
bspc config focused_border_color   $bliss
bspc config presel_feedback_color  $bliss

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Settings
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
bspc config single_monocle false
bspc config borderless_monocle false
bspc config automatic_scheme alternate
bspc config focus_follows_pointer true
bspc config pointer_follows_focus true

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Rules
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
bspc rule -a firefox desktop='firefox' follow=on
bspc rule -a chromium desktop='firefox' follow=on
bspc rule -a Gpick sticky=on state=floating center=on
bspc rule -a discord sticky=on state=floating center=on rectangle=1000x800+0+0

#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# Envy
#━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━#
# xinput set-prop 'SYNA32A0:00 06CB:CE14 Touchpad' 'libinput Tapping Enabled' 1
# pactl set-source-volume alsa_input.pci-0000_04_00.6.HiFi__hw_acp__source 200%


