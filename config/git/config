[merge]
	tool = vim_mergetool
	conflictstyle = diff3

[mergetool "vim_mergetool"]
    cmd = vim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
    trustExitCode = true

[advice]
	statusHints = off
