super + c
	vscodium
	
super + d
	scratchspace.sh discord

super + e
	dolphin

super + f
	firefox

super + p
	~/.config/polybar/launch.sh

super + r
    ~/.config/rofi/powermenu/powermenu.sh

super + v
	vlc

super + w
	vboxmanage startvm 'Win10_Test'
	
super + shift + w
	vboxmanage controlvm 'Win10_Test' poweroff

alt + F4
	bspc node -c

super + F4
	bspc node -k

super + Home
	reboot

super + End
	shutdown now

super + Delete
	sh i3lock.sh

Print
